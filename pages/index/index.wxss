/**index.wxss**/
.container {
  background:#f0f0f0;
}
.list {
  margin-bottom:10px;
  background: #fff;
}
.user-content {
  height:28px;
  line-height: 28px;
  overflow:hidden;
  padding:16px 10px;
  border-bottom:1px solid #ccc;
}
.user-name {
  display: inline-block;
  color:#000;
  font-size:14px;
  line-height: 28px;
  vertical-align:top;
  margin-left:10px;
}
.user-pic {
  width:28px;
  height:28px;
  border-radius:50%;
}
.user-city {
  color:#9c9c9c;
  font-size:12px;
  float:right;
  background:url(../../img/4.png) no-repeat left center;
  background-size: 25%;
  padding-left:18px;
}
.list-main {
  position:relative;
}
.work-detail {
  position:absolute;
  bottom:20px;
  left:10px;
  right:10px;
}
.list-main {
  padding:5px 0;
}
.work-title {
  font-size:20px;
  color:#fff;
  font-weight:500;
}
.work-time {
  font-size:12px;
  color:#fff;
  font-weight:400;
}
.work-pirce {
  line-height: 28px;
  font-size:20px;
  color:#fff;
  float:right;
}
.work-like {
  padding:14px 10px;
  height:32px;
  line-height: 32px;
  text-align: center;
  font-size:14px;
  color:#D04344;
}
.work-like text {
  background:url(../../img/10.png) no-repeat left center;
  background-size: 25%;
  padding-left:20px;
}